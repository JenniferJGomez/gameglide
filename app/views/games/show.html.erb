<h1><%= @game.title%> Detail Page</h1>
<h3>Game Reviews</h3>
<div class= "wrapper">
<img class="show_image" src=<%= @game.image %>>
<%@game.reviews.each do |rev|%>
    <div class = "review-box"><%= rev.content %> : <%= rev.rating %></div>
<%end %>
</div>


        <%@game.reviews.each do |rev|%>
            <div class="ui section divider"><%=rev.game_rental.user.username%>
            <div>Review: <%= rev.content %> </div>
            <div>Rating:<% rev.rating.times do%>
                <i class="yellow star icon"></i>
            <%end%>
                </div>
        <%end%>
    </div><br>

<div><%= link_to "Rent This Game", new_game_rental_path %></div>
<div><%= link_to "Back to Games List", games_path(@game)%></div>

